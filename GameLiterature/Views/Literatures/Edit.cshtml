@model GameLiterature.Models.Literature
@inject LanguageService language
@{
    ViewData["Title"] = "Edit";
}

<h1>@language.Getkey("edit")</h1>

<h4>@language.Getkey("literature")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="LiteratureQuestion" class="control-label"></label>
                <input asp-for="LiteratureQuestion" class="form-control" />
                <span asp-validation-for="LiteratureQuestion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LiteratureAnswer" class="control-label"></label>
                <input asp-for="LiteratureAnswer" class="form-control" />
                <span asp-validation-for="LiteratureAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
